<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.apache.shardingsphere.example.core.mybatis.repository.ShopMessageHistoryRepository">
    <resultMap id="baseResultMap" type="org.apache.shardingsphere.example.core.api.entity.ShopMessageHistory">
        <result column="id" property="id" jdbcType="BIGINT"/>
        <result column="shop_id" property="shopId" jdbcType="BIGINT"/>
        <result column="signin_name" property="signinName" jdbcType="VARCHAR"/>
        <result column="sms_content" property="smsContent" jdbcType="VARCHAR"/>
        <result column="receive_status_id" property="receiveStatusId" jdbcType="VARCHAR" />
    </resultMap>
    <!-- not work    throw error  -->
    <select id="fetchShopMessageSendHistoryList"
            resultMap="baseResultMap">
    SELECT shop_id,id, #{statusId} as receive_status_id FROM shop_message_history WHERE shop_id = #{shopId}
 </select>


    <!-- working OK -->
    <select id="fetchShopMessageSendHistorysss" resultMap="baseResultMap">
    SELECT *  FROM shop_message_history WHERE shop_id = #{shopId}
 </select>
</mapper>
